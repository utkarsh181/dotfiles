#!/bin/sh

# This script uses xbacklight to print out screen brightness level

case $BLOCK_BUTTON in
	1) ;;
	2) ;;
	3) notify-send "ðŸ’¡ Screen Brightness module" "\- Scroll to change." ;;
	4) xbacklight -inc 1;;
	5) xbacklight -dec 1;;
esac

brightness_level=$(xbacklight -get)

echo "ðŸ’¡ ${brightness_level%.*}%"
